// Keyword mapping untuk pencarian khusus
const keywordLinks = {
  'pedang88': 'https://driftdazzle.com/?action=register&rc=HA5TC5E6UG&ci=135',
  'facebook': 'https://www.facebook.com/Mika.pdg/',
  'instagram': 'https://www.instagram.com/mikasapdg88/'
};

// Handle form submit (langsung buka link atau pencarian Google jika tidak ada di mapping)
searchForm.addEventListener('submit', function(e) {
  e.preventDefault();
  const searchTerm = (searchInput.value || '').trim().toLowerCase();
  if (!searchTerm) {
    searchInput.focus();
    return;
  }

  const targetUrl = keywordLinks[searchTerm] || ('https://www.google.com/search?q=' + encodeURIComponent(searchTerm));

  // Validasi URL
  const isValidHttpUrl = (url) => {
    try { new URL(url); return true; } catch (_) { return false; }
  };
  const finalUrl = isValidHttpUrl(targetUrl) ? targetUrl : 'https://www.google.com';

  // buka link dengan elemen anchor agar lebih kompatibel dengan popup blockers
  const a = document.createElement('a');
  a.href = finalUrl;
  a.target = '_blank';
  a.rel = 'noopener noreferrer';
  document.body.appendChild(a);
  a.click();
  a.remove();
});

// Navigation links mapping
